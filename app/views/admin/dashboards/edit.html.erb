<div class="admin-dashboard-manage">
  <%= render partial: 'shared/admin_navigation', :locals => { active: nil }  %>

  <div class="span8">
    <h1>Edit Store</h1>
    <hr>
    <%= simple_form_for @store, url: store_admin_update_store_path(current_store) do |f| %>
      <%= f.input :name %>
      <%= f.input :path %>
      <%= f.input :description %>
      <%= f.input :theme, collection: @themes %>
      <%= f.submit class: 'btn check-change' %>
    <% end %>
  </div>
</div>

<script>
  $('#store_path').change(function() {
    alert('WARNING: Changing the path will result in breaking all existing links.');
  });
</script>
