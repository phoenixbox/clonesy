<%= content_for :head do %>
  <link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.4.2.min.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
  <script src="http://cdn.oesmith.co.uk/morris-0.4.2.min.js"></script>
  <script type="text/javascript" src="../d3/d3.v3.js"></script>
<% end %>

<div class="user-index">
  <div>
  <%= render partial: 'shared/uber_navigation',
             :locals => { active: :statistics } %>
  </div>
</div>

  
<div class="span12">
  <h1><%= t 'statistics.self' %></h1>
  <hr>
  <div class="row-fluid">
    <div class="span12">
      <h3>Order Value Over Time</h3>
      <hr>
      <%= content_tag :div, "", id: "orders_chart", data: {orders: orders_value_chart_data } %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <h3>Average Spend per Customer</h3>
      <hr>
       <%= content_tag :div, "", id: "bar_chart", data: {spend: aspu } %>
    </div>
    <div class="span6 pull-right">
      <h3>Top 5 Bestsellers</h3>
      <hr>
       <%= content_tag :div, "", id: "donut_chart", data: {products: top_five_products } %>
  </div>
</div>


